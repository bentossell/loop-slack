{
  "name": "loop-slack",
  "version": "0.1.0",
  "description": "Slack bot for running agent loops on GitHub repos",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun run src/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@slack/bolt": "^4.1.0",
    "@slack/web-api": "^7.8.0",
    "octokit": "^4.0.2",
    "better-sqlite3": "^11.7.0",
    "yaml": "^2.6.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.2"
  }
}
